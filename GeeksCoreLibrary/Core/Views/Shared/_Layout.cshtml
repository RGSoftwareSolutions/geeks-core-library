@model GeeksCoreLibrary.Modules.Templates.ViewModels.PageViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@(Model.MetaData.PageTitle + Model.MetaData.GlobalPageTitleSuffix)</title>
    @await RenderSectionAsync("MetaData", false)
    @await RenderSectionAsync("HeaderGoogleAnalyticsScripts", false)
    @await Html.PartialAsync("_Favicons")
    @await RenderSectionAsync("HeaderStyles", false)
    @await RenderSectionAsync("HeaderScripts", false)
</head>
<body>
<input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken" value="@Xsrf.GetAndStoreTokens(Context).RequestToken">
@await RenderSectionAsync("BodyGoogleAnalyticsScripts", false)
@RenderBody()
@await RenderSectionAsync("FooterStyles", false)
@await RenderSectionAsync("FooterScripts", false)
</body>
</html>